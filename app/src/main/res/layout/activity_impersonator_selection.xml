<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.jackkell.mimicryproject.mainactivities.ImpersonatorSelectionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbImpersonatorSelection"
        android:layout_height="?android:actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/primary"
        android:elevation="4dp"
        app:titleTextColor="@color/icons"/>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="?android:actionBarSize"
        android:id="@+id/rvImpersonatorSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCreateImpersonator"
        android:src="@drawable/ic_add_white_24dp"
        android:background="@color/accent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignBottom="@+id/rvImpersonatorSelection"
        android:layout_alignRight="@+id/rvImpersonatorSelection"
        android:layout_alignEnd="@+id/rvImpersonatorSelection">
    </android.support.design.widget.FloatingActionButton>

</RelativeLayout>
